<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fg3_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants">

    <View
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:background="@drawable/product_shape_white"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_lv_newpublish"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        fresco:actualImageScaleType="focusCrop"/>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/img_lv_newpublish"
        android:layout_toRightOf="@+id/img_lv_newpublish">

        <TextView
            android:id="@+id/huojiangzhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lv_newpublish_name"
            android:layout_marginTop="2dp"
            android:text="获奖者:  "
            android:textColor="#989898"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_lv_newpublish_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/huojiangzhe"
            android:clickable="true"
            android:text="第几个获奖者"
            android:textColor="@color/product_winner_color_sel"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tx_lv_newpublic_peoplenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/huojiangzhe"
            android:text="@string/msg_buy_peoplenum"
            android:textColor="#888888"/>


        <TextView
            android:id="@+id/new_publish_worth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx_lv_newpublic_peoplenum"
            android:layout_marginTop="10dp"
            android:text="价值：￥"
            android:textColor="#989898"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_lv_newpublish_winTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_publish_worth"
            android:layout_marginTop="2dp"
            android:text="揭晓时间:"
            android:textColor="#989898"
            android:textSize="12sp"/>

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/winner_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@drawable/account_pic_default"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="#ffffff"
        fresco:roundingBorderWidth="1dp"/>

    <View
        android:id="@+id/item_footer"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#dddddd"/>

</RelativeLayout>