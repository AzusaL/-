<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl_jiexiao"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#40ffcc66">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="4.5">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_timehead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2016-03-31 11:55:55:805"
                    android:textColor="#888888"
                    android:textSize="13sp"/>


            </RelativeLayout>


            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@drawable/line_h1"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/tv_timenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1155558051523"
                    android:textColor="#ff5500"
                    android:textSize="13sp"/>

                <View
                    android:id="@+id/view_triangle"
                    android:layout_width="10dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/triangle"/>

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#ff7700"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLength="6"
                    android:text="中支苹果手机"
                    android:textColor="#888888"
                    android:textSize="13sp"/>

            </RelativeLayout>


        </LinearLayout>

        <View
            android:id="@+id/view_fgx"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#ffcc33"/>

    </RelativeLayout>


</RelativeLayout>