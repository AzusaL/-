<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white2gray_sel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comment_img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="#ff7700"
            fresco:roundingBorderWidth="1dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/comment_img_head">

            <TextView
                android:id="@+id/tv_commentusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="坚持限购中手机"
                android:textColor="@color/product_winner_color_sel"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_commenttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_commentusername"
                android:layout_marginTop="4dp"
                android:text="1分钟前"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_commentcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_commenttime"
                android:layout_marginTop="4dp"
                android:text="本云参加25人次本云参加25人次本云参加25人次本云参加25人次本云参加25人次本云参加25人次本云参加25人次本云参加25人次本云参加25人次本云参加25人次本云参加25人次本云参加25人次"
                android:textColor="#888888"
                android:textSize="13sp" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
